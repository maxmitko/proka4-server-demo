- var mainList = {about: 'О центре', news: 'Новости', service: 'Услуги и цены', "schedule": 'Расписание',shop: 'Магазин'}
nav.main-nav
    .main-nav__wrapper.container
        ul.main-nav__list.site-list
            li.main-nav__item.main-nav__logo
                a.main-nav__link(href='/')
            each val, key in mainList
                li.main-nav__item
                    if key !== "/" && currentPage === key
                        a.main-nav__link.current-link(href=`/${key}`)
                            span= val
                    else
                        a.main-nav__link(href=`/${key}`)
                            span= val
        if !user
            ul.main-nav__list.user-list
                li.main-nav__item.main-nav__item--signin-icon
                    a.main-nav__link(href='/user/signin') Вход
                li.main-nav__item
                    a.main-nav__link(href='/user/signup') 
                        span Регистрация
        else
            ul.main-nav__list.user-list
                if user.role.id !== 1
                    li.main-nav__item.main-nav__item--profile-icon
                        a.main-nav__link(href='/user/profile')
                            span Профиль
                if user.role.id === 1
                    li.main-nav__item.main-nav__item--signout-icon
                        a.main-nav__link(href=`${process.env.ADMIN_URL}/registration`)
                            span Администрирование
                li.main-nav__item.main-nav__item--signout-icon
                    a.main-nav__link(href='/user/signout') 
                        span Выход
